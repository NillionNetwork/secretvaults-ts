{
  "name": "@nillion/secretvaults",
  "version": "0.1.6",
  "license": "MIT",
  "description": "A client for interacting with nillion's nildb blind module",
  "type": "module",
  "scripts": {
    "install-hooks": "lefthook install",
    "attw": "attw --profile esm-only --pack .",
    "check": "biome check --fix && tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint --fix",
    "format": "biome format --fix",
    "build": "tsup",
    "test": "vitest run",
    "docs": "typedoc",
    "docs:serve": "pnpm docs && npx serve docs"
  },
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "es-toolkit": "^1.39.8",
    "zod": "^4.1.11"
  },
  "peerDependencies": {
    "@nillion/blindfold": "0.1.0",
    "@nillion/nuc": "1.0.0-rc.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@faker-js/faker": "^10.0.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.6.1",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "3.2.4",
    "docker-compose": "^1.3.0",
    "dotenv": "^17.2.3",
    "lefthook": "^1.13.6",
    "mongodb": "^6.20.0",
    "semver": "^7.7.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "type-fest": "^5.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.1",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
