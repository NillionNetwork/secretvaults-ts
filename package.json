{
  "name": "@nillion/secretvaults",
  "version": "1.0.0-rc.4",
  "license": "MIT",
  "description": "A client for interacting with nillion's nildb blind module",
  "type": "module",
  "scripts": {
    "fix": "biome check --fix --unsafe && tsc --noEmit",
    "fmt": "biome format --fix",
    "install-hooks": "lefthook install",
    "test": "vitest run",
    "build": "tsup",
    "attw": "attw --profile esm-only --pack .",
    "docs": "typedoc",
    "docs:serve": "pnpm docs && npx serve docs"
  },
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@nillion/blindfold": "0.1.0",
    "@nillion/nuc": "1.0.0",
    "es-toolkit": "^1.41.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "2.1.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@faker-js/faker": "^10.1.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.9.1",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "4.0.4",
    "docker-compose": "^1.3.0",
    "dotenv": "^17.2.3",
    "lefthook": "^2.0.1",
    "mongodb": "^6.20.0",
    "semver": "^7.7.3",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "type-fest": "^5.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.4"
  },
  "packageManager": "pnpm@10.18.0",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
